---
layout: auth/auth-layout
themeTitle: Servision
---
<div class="auth-container">
	<div class="card">
		<header class="auth-header">
			<h1 class="auth-title">
				{{> _common/logo/logo}}
				{{themeTitle}}
			</h1>
		</header>
		<div class="auth-content">
			<p class="text-muted text-center"><small>请输入您的注册邮箱来重置密码</small></p>
			<form id="reset-form"  action="/index.html" method="GET" novalidate="">
				<div class="form-group">
					<label for="email1" >邮箱</label>
					<input type="email" class="form-control underlined" name="email1" id="email1" placeholder="请输入您的注册邮箱" required>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-block btn-primary">重置</button>
				</div>
				<div class="form-group clearfix">
                  <p class="text-muted text-center">
                    <a href="login.html" style="margin-right: 20px;">登录</a>
                    <a href="signup.html">注册</a>
				  </p>
				</div>
			</form>
		</div>
	</div>
	<div class="text-center">
		<a href="index.html" class="btn btn-secondary btn-sm">
			<i class="fa fa-arrow-left"></i> 前往首页
		</a>
	</div>
</div>
